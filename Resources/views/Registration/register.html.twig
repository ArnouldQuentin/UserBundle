{% extends 'AppBundle:Member:base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap-social.css') }}" type="text/css"/>
{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block bodyContainer %}
    <body class="bg-info dker">
    <section id="content" class="m-t-lg wrapper-md animated fadeInDown">
        <div class="container aside-xl">
            <a class="navbar-brand block" href="index.html"><span class="h1 font-bold">Play Along</span></a>
            <section class="m-b-lg">
                <header class="wrapper text-center">
                    <strong>Sign up to find interesting things</strong>
                </header>
                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                <div class="form-group">
                    {{ form_widget(form.username, {attr: {class: 'form-control input-lg text-center no-border', placeholder: 'name'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.email, {attr: {class: 'form-control input-lg text-center no-border', placeholder: 'email'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.plainPassword.children.first, {attr: {class: 'form-control input-lg text-center no-border', placeholder: 'password'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.plainPassword.children.second, {attr: {class: 'form-control input-lg text-center no-border', placeholder: 'verify password'}}) }}
                </div>
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-lg btn-warning lt b-white b-2x btn-block"><i
                            class="icon-arrow-right pull-right"></i><span class="m-r-n-lg">Sign up</span></button>
                {{ form_end(form) }}
                <br>
                <p>
                    <a class="btn btn-block btn-social btn-lg btn-facebook"
                       href="{{ hwi_oauth_login_url('facebook') }}">
                        <i class="fa fa-facebook"></i> Sign in with Facebook
                    </a>
                </p>
                <div class="line line-dashed"></div>
                <p class="text-muted text-center">
                    <small>Already have an account?</small>
                </p>
                <a href="{{ path('fos_user_security_login') }}" class="btn btn-lg btn-info btn-block">Sign
                    in</a>
            </section>
        </div>

    </section>
    <!-- footer -->
    <footer id="footer">
        <div class="text-center padder clearfix">
            <p>
                <small>Web app framework base on Bootstrap<br>&copy; 2014</small>
            </p>
        </div>
    </footer>
    <script src="{{ asset('bundles/app/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/app/js/bootstrap.min.js') }}"></script>
    <!-- App -->
    <script src="{{ asset('bundles/app/js/app.js') }}"></script>
    <script src="{{ asset('bundles/app/js/app.plugin.js') }}"></script>

    <script src="https://use.fontawesome.com/d8ce919d35.js"></script>
    </body>

{% endblock %}